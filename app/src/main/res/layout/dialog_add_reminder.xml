<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Título con TextInputLayout para mejor UX -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tituloInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tituloEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Título del recordatorio"
                android:inputType="text"
                android:textColor="#000000"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Descripción -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/descripcionInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tituloInputLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/descripcionEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descripción"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:textColor="#000000"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Selección de vencimiento con icono -->
        <LinearLayout
            android:id="@+id/vencimientoLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/selector_background"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintTop_toBottomOf="@id/descripcionInputLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/iconoVencimiento"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_calendar"
                android:contentDescription="Seleccionar vencimiento"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/vencimientoTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Seleccionar fecha de vencimiento"
                android:textSize="16sp"
                android:textColor="#666666" />
        </LinearLayout>

        <!-- Selección de recordatorio con icono -->
        <LinearLayout
            android:id="@+id/recordatorioDateLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/selector_background"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/vencimientoLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/iconoRecordatorio"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_bell"
                android:contentDescription="Seleccionar recordatorio"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/recordatorioTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Seleccionar fecha y hora de recordatorio"
                android:textSize="16sp"
                android:textColor="#666666" />
        </LinearLayout>

        <!-- Botón guardar destacado -->
        <Button
            android:id="@+id/guardarButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="@android:color/white"
            android:paddingVertical="12dp"
            app:layout_constraintTop_toBottomOf="@id/recordatorioDateLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
