<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título destacado -->
        <TextView
            android:id="@+id/tituloTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título del recordatorio"
            android:textStyle="bold"
            android:textSize="26sp"
            android:textColor="#212121" />

        <!-- Descripción -->
        <TextView
            android:id="@+id/descripcionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción del recordatorio"
            android:textSize="22sp"
            android:textColor="#444444"
            android:layout_marginTop="4dp" />

        <!-- Fecha de vencimiento -->
        <TextView
            android:id="@+id/vencimientoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vence: 12/08/2025"
            android:textSize="20sp"
            android:textColor="#FF5722"
            android:layout_marginTop="4dp" />

        <!-- Detalles adicionales -->
        <TextView
            android:id="@+id/recordatorioTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalles adicionales..."
            android:textSize="12sp"
            android:textColor="#757575"
            android:layout_marginTop="4dp" />

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp">

            <ImageButton
                android:id="@+id/editButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_edit"
                android:contentDescription="Editar"
                card_view:tint="#616161" />

            <ImageButton
                android:id="@+id/deleteButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_delete"
                android:contentDescription="Eliminar"
                card_view:tint="#D32F2F" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
