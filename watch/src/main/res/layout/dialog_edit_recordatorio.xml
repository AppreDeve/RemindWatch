<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="8dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="20dp">

            <!-- Título -->
            <EditText
                android:id="@+id/tituloEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Título"
                android:inputType="textPersonName"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/edittext_fondo"
                android:padding="8dp"
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/black"
                android:textColorHint="#AAAAAA" />

            <!-- Iconos y textos para vencimiento y recordatorio -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="8dp">

                <!-- Selección de vencimiento -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageButton
                        android:id="@+id/iconoVencimiento"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_calendar"
                        android:contentDescription="Seleccionar vencimiento"/>

                    <TextView
                        android:id="@+id/vencimientoTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sin fecha"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <!-- Selección de recordatorio -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageButton
                        android:id="@+id/iconoRecordatorio"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_bell"
                        android:contentDescription="Seleccionar recordatorio" />

                    <TextView
                        android:id="@+id/recordatorioTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sin fecha"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="12dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Descripción -->
            <EditText
                android:id="@+id/descripcionEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descripción"
                android:inputType="textMultiLine"
                android:textSize="14sp"
                android:background="@drawable/edittext_fondo"
                android:padding="8dp"
                android:textColor="@android:color/black"
                android:textColorHint="#AAAAAA" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
