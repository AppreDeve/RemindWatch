<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título -->
            <EditText
                android:id="@+id/tituloEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="username"
                android:hint="Título"
                android:inputType="textPersonName"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="0dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="start|center_vertical">

                <ImageView
                    android:id="@+id/iconoVencimiento"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_calendar"
                    android:contentDescription="Seleccionar fecha de vencimiento"
                    android:clickable="true"
                    android:focusable="true" />

                <ImageView
                    android:id="@+id/iconoRecordatorio"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_bell"
                    android:contentDescription="Seleccionar recordatorio"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <!-- Descripción -->
            <EditText
                android:id="@+id/descripcionEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="description"
                android:hint="Descripción del recordatorio"
                android:inputType="textMultiLine"
                android:textSize="16sp"
                android:layout_marginTop="12dp"/>

            <!-- Botón Guardar -->
            <Button
                android:id="@+id/guardarButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:text="Guardar"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:background="@android:color/holo_blue_dark"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
